<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 使用namespace标签   自动生成了 一个实现类来执行sql语句 
		实现类的方法名与查询的id值一致
-->
<mapper namespace="com.lgd.model.JudgesMapper">
	<!-- 配置javaBena  与数据库的映射 -->
	<resultMap id="BaseResultMap" type="com.lgd.bean.Judges">
		<id column="fid" property="fid" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="fnumber" property="fnumber" jdbcType="VARCHAR" />
		<result column="sex" property="sex" jdbcType="VARCHAR" />
		<result column="weight" property="weight" jdbcType="DOUBLE" />
		<result column="contactInfo" property="contactInfo" jdbcType="VARCHAR" />
		<result column="description" property="description" jdbcType="VARCHAR" />
	</resultMap>
	
	<sql id="Base_Column_list">
		fid, name, sex, weight, description
	</sql>
	
	<!-- 根据fid  查询cmpt_dtal表 -->
	
	
	
	<insert id="addJudges"  parameterType="com.lgd.bean.Judges" >
		<trim  prefix="insert Judges(" suffix=")" suffixOverrides="," >
			<if test="name">  name, </if>
			<if test="fnumber">  fnumber, </if>
			<if test="sex">  sex, </if>
			<if test="weight">  weight, </if>
			<if test="contactInfo">  contactInfo, </if>
			<if test="description">  description, </if>
		</trim>
		<trim  prefix="values(" suffix=")" suffixOverrides="," >
			<if test="name">  #{name}, </if>
			<if test="fnumber">  #{fnumber}, </if>
			<if test="sex">  #{sex} , </if>
			<if test="weight">  #{weight}, </if>
			<if test="contactInfo">  #{contactInfo}, </if>
			<if test="description">  #{description}, </if>
		</trim>
	</insert>
	
	
	
	<insert id="addListJudges"  parameterType="java.util.List" >
		insert into  judges(   name,fnumber, sex, weight, contactInfo, description  )   values
		<foreach collection="list"  item="item"  index="index" separator=","  >
			 	(
			 	#{item.name},
			 	#{item.fnumber},
			 	#{item.sex},
				#{item.weight}, 
				#{item.contactInfo}, 
				#{item.description})
		</foreach>
	</insert>
	
</mapper>